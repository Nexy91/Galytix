/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": [
      "jasmine"
    ],
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@app/*": ["src/app/*"],
      "@shared/*": ["src/app/shared*"],
      "@env/*": ["src/environments/*"]
    }
  },
  "files": [
    "src/test.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ]
}
